{
  "name": "spotidl",
  "version": "0.1.0",
  "description": "Package to download songs from spotify",
  "main": "index.ts",
  "scripts": {
    "start": "node dist/index.js",
    "build" : "tsup",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jabedzaman/spotidl.git",
    "directory": "package/spotidl"
  },
  "keywords": [
    "spotify",
    "ytdl",
    "typescript",
    "node",
    "music"
  ],
  "author": "jabedzaman <hi@jabed.dev> (https://jabed.dev/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jabedzaman/spotidl/issues"
  },
  "homepage": "https://github.com/jabedzaman/spotidl#readme",
  "devDependencies": {
    "tsup": "^7.0.0",
    "typescript": "^5.1.3"
  },
  "type": "module",
  "tsup": {
    "clean": true,
    "dts": true,
    "entry": [
      "src/index.ts"
    ],
    "format": [
      "esm"
    ],
    "minify": true,
    "metafile": true,
    "sourcemap": true,
    "target": "esnext",
    "outDir": "dist"
  }
}